<?xml version="1.0" encoding="utf-16"?>
<SerializedNotification xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:xsd="http://www.w3.org/2001/XMLSchema">
  <Notification>inventory</Notification>
  <NotificationParameters>
    <Item>
      <Key>
        <string>OpenMetaverse.InstantMessageEventArgs</string>
      </Key>
      <Value>
        <ArrayOfParameter>
          <Parameter>
            <Path>IM.FromAgentName</Path>
            <Name>name</Name>
            <Processing>
              <NameSplit>
                <First>firstname</First>
                <Last>lastname</Last>
              </NameSplit>
            </Processing>
          </Parameter>
          <Parameter>
            <Path>IM.FromAgentID</Path>
            <Name>agent</Name>
          </Parameter>
          <Parameter>
            <Name>action</Name>
            <Processing>
              <ConditionalSubstitution>
                <Path>IM.Dialog</Path>
                <InstantMessageDialog>InventoryAccepted</InstantMessageDialog>
                <Value>accept</Value>
                <Type>OpenMetaverse.InstantMessageEventArgs</Type>
              </ConditionalSubstitution>
            </Processing>
            <Processing>
              <ConditionalSubstitution>
                <Path>IM.Dialog</Path>
                <InstantMessageDialog>InventoryDeclined</InstantMessageDialog>
                <Value>decline</Value>
                <Type>OpenMetaverse.InstantMessageEventArgs</Type>
              </ConditionalSubstitution>
            </Processing>
            <Processing>
              <TernarySubstitution>
                <Path>Accept</Path>
                <boolean>true</boolean>
                <Left>accept</Left>
                <Right>decline</Right>
                <Type>OpenMetaverse.InventoryObjectOfferedEventArgs</Type>
              </TernarySubstitution>
            </Processing>
          </Parameter>
          <Parameter>
            <Name>direction</Name>
            <Value>reply</Value>
          </Parameter>
          <Parameter>
            <Path>Name</Path>
            <Name>item</Name>
            <Type>OpenMetaverse.InventoryBase</Type>
          </Parameter>
          <Parameter>
            <Path>UUID</Path>
            <Name>inventory</Name>
            <Type>OpenMetaverse.InventoryBase</Type>
          </Parameter>
        </ArrayOfParameter>
      </Value>
    </Item>
    <Item>
      <Key>
        <string>OpenMetaverse.InventoryObjectOfferedEventArgs</string>
      </Key>
      <Value>
        <ArrayOfParameter>
          <Parameter>
            <Path>Offer.FromAgentName</Path>
            <Name>name</Name>
            <Processing>
              <NameSplit>
                <First>firstname</First>
                <Last>lastname</Last>
              </NameSplit>
            </Processing>
          </Parameter>
          <Parameter>
            <Path>Offer.FromAgentID</Path>
            <Name>agent</Name>
          </Parameter>
          <Parameter>
            <Path>AssetType</Path>
            <Name>asset</Name>
          </Parameter>
          <Parameter>
            <Path>Name</Path>
            <Name>item</Name>
            <Type>OpenMetaverse.InventoryBase</Type>
          </Parameter>
          <Parameter>
            <Path>UUID</Path>
            <Name>inventory</Name>
            <Type>OpenMetaverse.InventoryBase</Type>
          </Parameter>
          <Parameter>
            <Path>Offer.IMSessionID</Path>
            <Name>session</Name>
          </Parameter>
          <Parameter>
            <Name>direction</Name>
            <Value>offer</Value>
          </Parameter>
        </ArrayOfParameter>
      </Value>
    </Item>
  </NotificationParameters>
</SerializedNotification>